{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <br>
        <h3> Votre profil : </h3>
        <br>
        <table class="table" style="width:800px; margin-left: 15px">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
            </tr>

            {% if user is defined %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.password }}</td>
                    <td>
                        <button type="button" style="margin-right:15px"><a
                                    href="{{ url("user.update", {"user":user.id}) }}">Update</a></button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No content available</td>
                </tr>
            {% endif %}
        </table>
    </div>
{% endblock %}